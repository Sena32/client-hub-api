# Django Settings
# IMPORTANTE: Gere uma nova SECRET_KEY para produção usando: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=.localhost,127.0.0.1,[::1],yourdomain.com

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=127.0.0.1
DB_PORT=5432

# CORS Settings
# Para produção, defina CORS_ORIGIN_ALLOW_ALL=False e configure CORS_ALLOWED_ORIGINS
CORS_ORIGIN_ALLOW_ALL=False
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Site Configuration
SITE_ID=1

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=1
JWT_ROTATE_REFRESH_TOKENS=False
JWT_BLACKLIST_AFTER_ROTATION=True
JWT_UPDATE_LAST_LOGIN=False
JWT_ALGORITHM=HS256
JWT_VERIFYING_KEY=
JWT_AUDIENCE=
JWT_ISSUER=
JWT_JWK_URL=
JWT_AUTH_HEADER_TYPES=Bearer
JWT_AUTH_HEADER_NAME=HTTP_AUTHORIZATION
JWT_USER_ID_FIELD=id
JWT_USER_ID_CLAIM=user_id
JWT_TOKEN_TYPE_CLAIM=token_type
JWT_JTI_CLAIM=jti
JWT_SLIDING_TOKEN_REFRESH_EXP_CLAIM=refresh_exp
JWT_SLIDING_TOKEN_LIFETIME_MINUTES=60
JWT_SLIDING_TOKEN_REFRESH_LIFETIME_DAYS=1

# Internationalization
LANGUAGE_CODE=pt-br
TIME_ZONE=UTC

# Account Settings
ACCOUNT_EMAIL_REQUIRED=False
